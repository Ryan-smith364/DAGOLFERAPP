<!DOCTYPE html>
<html>
  <head>
    <title>Dagolferapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

            <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet">

        <link rel="stylesheet" href="css/icon-font.css">
        <link rel="stylesheet" href="css/style.css">
        <link rel="shortcut icon" type="image/png" href="img/favicon.png">
        
        <title> Golf application | Coure List </title>
  </head>
    <h1 class="title"> DaGolferApp </h1>
  <body>
   <% if session["username"] %>


   <div class="logout"><span><%= button_to "Logout", logout_path , method: "delete" %></span></div>
   <div class="header">   

        <div class="change"><%= button_to "Find Golfer", users_path, method: :get%></div><div class="change"><%= button_to "Search By Course", courses_path, method: :get%></div><div class="change"><%= button_to "Search By State", locations_path, method: :get%></div>
      
      <div class="log"> 
       <div class="change"> <%= button_to "Profile", user_path(session["userid"]), method: :get%></div>
    
   <% else %>
   <%= link_to "Login" , login_path %>

   <% end %>  
   </div></div><hr> 
    <%= yield %>
      
  </body>
</html> 
