<!DOCTYPE html>
<html>
  <head>
    <title>Dagolferapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

   <% if session["username"] %>
   <span> Welcome to the Golf App <%= session["username"] %> </span><br>
   <span><%= link_to "Logout", logout_path , method: "delete" %></span>
      <div class="header">

        <div class="button"><%= button_to "Find Golfer", users_path, method: :get%></div><div class="button"><%= button_to "Search By Course", courses_path, method: :get%></div><div class="button"><%= button_to "Search By State", locations_path, method: :get%></div>
      </div>
      <div class="log"> 
        <%= button_to "Profile", user_path(session["userid"]), method: :get%>
      </div>
   <% else %>
   <%= link_to "Login" , login_path %>
   <% end %>
    <%= yield %>
  </body>
</html> 
