

<%= form_for @review do |r|%>
<%= r.label:user %><br>
<%= r.collection_select :user_id, User.all , :id , :name %><br>

<%= r.label:review_text %><br>
<%= r.text_area:review_text %><br>

<%= r.hidden_field :course_id, value: @course%>

<%= r.label:rating %><br>
<%= r.number_field:rating %><br>

<%= r.submit %>
<% end %>
    
