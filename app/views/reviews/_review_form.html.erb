<% stars = (1..5)%>

<%if @review.errors%>
    <%= render partial: "shared/error_form", locals: {instance: @review }%>
<%end%>

<%= form_for @review do |r|%>


<%= r.hidden_field :user_id, value: session["userid"]%>

<%= r.label:review_text %><br>
<%= r.text_area:review_text %><br>

<%= r.hidden_field :course_id, value: @course.id%>

<%= r.label:rating %><br>
<%= r.select :rating, (1..5) %><br>

<%= r.submit %>
<% end %>
    