
<% if @user.errors %>
        <%  @user.errors.full_messages.each do |message|  %>
        <%= message %>
        <% end %>
     <%end %>



<%= form_for @user do |f|%>
<%= f.label :username%>
<%= f.text_field :username%>
<%= f.label :name%>
<%= f.text_field :name%>
<%= f.label :handicap%>
<%= f.number_field :handicap%>
<%= f.label :password%>
<%= f.password_field :password%>
<%= f.submit %>
<% end %>   