<h1> <%= @course.name%></h1>
<h2> <%= @course.location.name%>
<h3>Par: <%= @course.par%></h3>
<h5> Description: </h5>
<p><%= @course.description%> </p><br>

<h3> Reviews:</h3>

    <div>
        <% if @course.reviews == []%>
            <%= "No Reviews Found" %><br>
        <%end%>
    <%= link_to "Write review", new_review_path%><br><br>
        <% @course.reviews.each do |review|%>
        
            User: <%= review.user.name%><br>
            Stars: <%=review.rating%><br>
            Thoughts: <%= review.review_text%><br><br>
        <%end%><br>
    </div>

 <%= render partial: "reviews/review_form" %> 


<%= link_to "#{@course.location.name} Courses" , location_path(@course.location)%><br>
